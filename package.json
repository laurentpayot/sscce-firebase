{
  "name": "sscce-firebase",
  "version": "0.0.1",
  "description": "SSCCE for Firebase bugs",
  "main": "./src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "esbuild": "esbuild src/main.js src/service-worker.js --outdir=dist --target=es6 --bundle",
    "dist": "rm -rf dist && mkdir dist && cp -r assets/* dist",
    "start": "npm run dist && ln src/index.html dist && firebase emulators:exec 'npm run esbuild -- --watch'",
    "build": "npm run dist && cp src/index.html dist && npm run esbuild -- --minify --sourcemap",
    "deploy": "npm run build && firebase deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laurentpayot/sscce-firebase.git"
  },
  "author": "Laurent Payot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/laurentpayot/sscce-firebase/issues"
  },
  "homepage": "https://github.com/laurentpayot/sscce-firebase#readme",
  "devDependencies": {
    "esbuild": "^0.12.15",
    "firebase": "^9.0.0-beta.6",
    "firebase-tools": "^9.14.0"
  }
}
